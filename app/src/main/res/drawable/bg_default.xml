<!-- res/drawable/bg_default.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient với nhiều sắc xanh -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#87CEEB"
                android:centerColor="#00BFFF"
                android:endColor="#4682B4"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Ánh sáng bầu trời nhạt -->
    <item>
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp"/>
            <gradient
                android:startColor="#A0C4FF"
                android:endColor="@android:color/transparent"
                android:gradientRadius="200dp"
                android:type="radial"/>
        </shape>
    </item>
</layer-list>
